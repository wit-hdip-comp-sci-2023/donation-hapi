<table class="table is-fullwidth">
  <thead>
    <th>Amount</th>
    <th>Method donated</th>
    <th>Donor</th>
    <th>Candidate</th>
  </thead>
  <tbody>
    {{#each donations}}
    <tr>
      <td>{{amount}}</td>
      <td>{{method}}</td>
      <td> {{donor.firstName}} {{donor.lastName}} </td>
      <td>{{candidate.lastName}}, {{candidate.firstName}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>